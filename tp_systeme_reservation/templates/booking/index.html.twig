{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">Booking index</h1>

    <table class="min-w-full bg-white">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="py-2 px-4 text-left">Id</th>
                <th class="py-2 px-4 text-left">Date</th>
                <th class="py-2 px-4 text-left">TimeSlot</th>
                <th class="py-2 px-4 text-left">EventName</th>
                <th class="py-2 px-4 text-left">User's name</th>
                <th class="py-2 px-4 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr class="border-b">
                <td class="py-2 px-4">{{ booking.id }}</td>
                <td class="py-2 px-4">{{ booking.date ? booking.date|date('Y-m-d') : '' }}</td>
                <td class="py-2 px-4">{{ booking.timeSlot ? booking.timeSlot|date('H:i:s') : '' }}</td>
                <td class="py-2 px-4">{{ booking.eventName }}</td>
                <td class="py-2 px-4">{{ booking.user.name }}</td>
                <td class="py-2 px-4">
                    <a href="{{ path('app_booking_show', {'id': booking.id}) }}" class="text-blue-500 hover:text-blue-700">show</a>
                    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}" class="ml-2 text-blue-500 hover:text-blue-700">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="py-4 text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_booking_new') }}" class="mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Create new</a>
{% endblock %}
