{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">User</h1>

    <table class="min-w-full bg-white">
        <tbody>
            <tr class="border-b">
                <th class="w-1/4 py-2 px-4 text-left">Id</th>
                <td class="py-2 px-4">{{ user.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="w-1/4 py-2 px-4 text-left">Name</th>
                <td class="py-2 px-4">{{ user.name }}</td>
            </tr>
            <tr class="border-b">
                <th class="w-1/4 py-2 px-4 text-left">Email</th>
                <td class="py-2 px-4">{{ user.email }}</td>
            </tr>
            <tr class="border-b">
                <th class="w-1/4 py-2 px-4 text-left">Password</th>
                <td class="py-2 px-4">{{ user.password }}</td>
            </tr>
            <tr class="border-b">
                <th class="w-1/4 py-2 px-4 text-left">Roles</th>
                <td class="py-2 px-4">{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr class="border-b">
                <th class="w-1/4 py-2 px-4 text-left">PhoneNumber</th>
                <td class="py-2 px-4">{{ user.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-4">
        <a href="{{ path('app_user_index') }}" class="mr-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Back to list</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">Edit</a>
    </div>

    <div class="mt-4">
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
